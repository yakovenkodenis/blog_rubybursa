<%= simple_form_for @article,
                    html: { class: 'form-signin' }  do |f| %>

	<% if @article.errors.any? %>
		<div id="error_explanation" class="alert alert-danger" role="alert">
				<h2>
					<%= pluralize(@article.errors.count, 'error') %> prohibited this article from being saved:
				</h2>
				<ul>
					<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>	
	<% end %>

	<%= f.input :title, label: false, placeholder: 'Title', input_html: { class: 'form-control' } %>

	<%= f.input :text, as: 'text', label: false, placeholder: 'Article goes here...', input_html: { class: 'form-control' } %>

	<%= f.button :submit, 'Save article', class: 'btn btn-primary btn-block' %>
	<%= link_to 'Back', articles_path, class: 'btn btn-primary btn-block' %>
<% end %>